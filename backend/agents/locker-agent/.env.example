# ====================================
# Locker Agent Service Configuration
# ====================================

# HTTP Server
HTTP_PORT=8000
GIN_MODE=release

# Orchestrator Integration
ORCHESTRATOR_URL=http://localhost:8080/api/v1
ORCHESTRATOR_TIMEOUT_SEC=10
ORCHESTRATOR_RETRY_COUNT=3

# Hardware: Arduino Controller
ARDUINO_PORT=/dev/ttyUSB0
ARDUINO_BAUDRATE=9600
ARDUINO_MOCK_MODE=false

# Hardware: Display Controller
DISPLAY_PORT=/dev/ttyUSB1
DISPLAY_BAUDRATE=115200
DISPLAY_MOCK_MODE=false

# Hardware: QR Camera Scanner
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
QR_SCAN_INTERVAL_MS=100
CAMERA_MOCK_MODE=false

# Serial Communication
SERIAL_TIMEOUT_MS=1000
SERIAL_WRITE_TIMEOUT_MS=500

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Service Identity
# LOCKER_AGENT_ID=