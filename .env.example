# ====================================
# SkyPost Delivery Platform Configuration
# ====================================

# Application
APP_NAME=skypost-delivery
APP_VERSION=1.0.0
LOG_LEVEL=debug

# Firebase
FIREBASE_CREDENTIALS_FILE_ON_YOUR_OS=/path/to/firebase/credentials.json
FIREBASE_CREDENTIALS_FILE_IN_DOCKER=/app/secrets/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Admin Users
ADMIN_FULLNAME="Admin User"
ADMIN_EMAIL=admin@example.com
ADMIN_PHONE=79991234567
ADMIN_PASSWORD=your_secure_password_here
ADMIN_CREATED_AT=01.01.2024

SECOND_ADMIN_FULLNAME="Second Admin User"
SECOND_ADMIN_EMAIL=admin2@example.com
SECOND_ADMIN_PHONE=79991234568
SECOND_ADMIN_PASSWORD=your_secure_password_here
SECOND_ADMIN_CREATED_AT=01.01.2024

# Security Keys
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
QR_HMAC_SECRET=your_qr_hmac_secret_key_here_min_32_chars

# Services Ports
DRONE_SERVICE_HTTP_PORT=8081
DRONE_SERVICE_GRPC_PORT=50051
GO_ORCHESTRATOR_HTTP_PORT=8080
GO_ORCHESTRATOR_GRPC_PORT=50052
GIN_MODE=debug

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=skypost_delivery
POSTGRES_PORT=5432
POSTGRES_HOST=postgres
MIGRATIONS_PATH=/app/migrations

# Redis Cache
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_PORT=6379

# MinIO Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_ENDPOINT=minio:9000
MINIO_PUBLIC_URL=http://localhost:9000
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_QR_CODES=qr-codes
MINIO_BUCKET_RECORDS=records
MINIO_USE_SSL=false

# RabbitMQ Message Broker
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_UI_PORT=15672
RABBITMQ_PROMETHEUS_PORT=15692
RABBITMQ_URL=amqp://guest:your_rabbitmq_password_here@rabbitmq:5672/

# SMS Service (SMS Aero)
SMSAERO_URL=https://gate.smsaero.ru/v2
SMSAERO_EMAIL=your_email@example.com
SMSAERO_API_KEY=your_smsaero_api_key_here

# WebSocket Configuration
WEBSOCKET_BROADCAST_INTERVAL=5

# Admin Panel (Frontend)
ADMIN_PANEL_URL=http://localhost
ADMIN_PANEL_PORT=80
VITE_API_URL=/api/v1
VITE_MINIO_URL=http://localhost:9001
VITE_GRAFANA_URL=http://localhost:3000
VITE_RABBITMQ_URL=http://localhost:15672

# Internal Service URLs
GRPC_DRONE_SERVICE_URL=localhost:50051
GRPC_GO_ORCHESTRATOR_URL=go-orchestrator:50052
DRONE_SERVICE_HTTP_URL=http://localhost:8081

# Monitoring (Grafana, Prometheus, Loki)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here
GRAFANA_PUBLIC_URL=
GRAFANA_DOMAIN=
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
LOKI_PORT=3100

# Nginx Proxy
NGINX_HTTP_PORT=80
