{
  "uid": "admin-panel-logs",
  "title": "Admin Panel - Logs",
  "tags": ["admin", "panel", "nginx", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Application Logs Stream",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{service=\"admin-panel\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    },
    {
      "id": 2,
      "title": "Nginx Access Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{service=\"admin-panel\"} |~ \"(?i)(GET|POST|PUT|DELETE|PATCH)\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    },
    {
      "id": 3,
      "title": "Nginx Error Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{service=\"admin-panel\"} |~ \"(?i)(error|warning|critical)\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    }
  ]
}
