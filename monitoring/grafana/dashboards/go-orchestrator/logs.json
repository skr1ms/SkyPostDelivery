{
  "uid": "go-orchestrator-logs",
  "title": "Go Orchestrator - Logs",
  "tags": ["go", "orchestrator", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Application Logs Stream",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{service=\"go-orchestrator\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    },
    {
      "id": 2,
      "title": "Error Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{service=\"go-orchestrator\"} |~ \"(?i)(error|fatal|panic)\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    },
    {
      "id": 3,
      "title": "HTTP Request Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{service=\"go-orchestrator\"} |~ \"(?i)(GET|POST|PUT|DELETE|PATCH)\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    },
    {
      "id": 4,
      "title": "Log Level Distribution",
      "type": "bargauge",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({service=\"go-orchestrator\"} [5m]))",
          "refId": "A",
          "legendFormat": "{{level}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 22
      },
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Logs Rate (per minute)",
      "type": "graph",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "sum(rate({service=\"go-orchestrator\"} [1m]))",
          "refId": "A",
          "legendFormat": "Logs/min"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 22
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          }
        }
      }
    }
  ]
}
